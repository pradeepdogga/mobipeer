<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myfirstapp.mobipeer.com.myfirstapp.MainActivity">

    <RelativeLayout android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent" android:layout_height="wrap_content">

    <myfirstapp.mobipeer.com.myfirstapp.gl.SurfaceView
        android:id="@+id/mSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SurfaceView
        android:id="@+id/justSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <Button
            android:id="@+id/client"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Join a Stream"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/server"/>

        <Button
            android:id="@+id/server"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Start Streaming"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/IPBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Enter IP"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
